<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane
        xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="ucf.assignments.ToDoController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="43.0" minHeight="10.0" prefHeight="43.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="394.0" minHeight="10.0" prefHeight="387.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                  prefHeight="400.0" prefWidth="600.0" GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="292.0" minWidth="10.0" prefWidth="195.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="433.0" minWidth="10.0" prefWidth="405.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <ListView prefHeight="200.0" prefWidth="200.0"/>
                <GridPane GridPane.columnIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="194.0" minHeight="10.0" prefHeight="43.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="371.0" minHeight="10.0" prefHeight="357.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <TextArea editable="false" prefHeight="200.0" prefWidth="200.0"
                                  text="Click Item to Edit (empty spaces are ListViews that will be populated later)"
                                  wrapText="true">
                            <GridPane.margin>
                                <Insets top="2.0"/>
                            </GridPane.margin>
                        </TextArea>
                        <ListView prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1"/>
                    </children>
                </GridPane>
            </children>
        </GridPane>
        <ButtonBar buttonOrder="" prefHeight="40.0" prefWidth="200.0" translateX="-290.0" translateY="-3.0">
            <buttons>
                <Button mnemonicParsing="false" text="New List"/>
                <Button mnemonicParsing="false" text="Load Lists"/>
                <Button mnemonicParsing="false" text="Save List(s)"/>
            </buttons>
        </ButtonBar>
    </children>
</GridPane>
